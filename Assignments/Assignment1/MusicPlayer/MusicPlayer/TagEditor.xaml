<Window x:Class="MusicPlayer.TagEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="TagEditor" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="titleTb" HorizontalAlignment="Left" Margin="10,59,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" Height="27"/>
        <TextBox x:Name="artistTb" HorizontalAlignment="Left" Margin="10,91,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" Height="27"/>
        <TextBox x:Name="albumTb" HorizontalAlignment="Left" Margin="10,123,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" Height="27"/>
        <TextBox x:Name="yearTb" HorizontalAlignment="Left" Margin="10,155,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" Height="27"/>
        <Button x:Name="saveBtn" Content="Save" HorizontalAlignment="Left" Margin="77,203,0,0" VerticalAlignment="Top" Height="21" Width="49" RenderTransformOrigin="-0.196,0.057" Click="SaveBtn_Click"/>   
    </Grid>
</Window>
